        spring="0.9"
        damp="10"
        sfric="0.8"
        dfric="0.7"
        ignored-by-solver="1"
        on-water="1"
        on-solid="0"
        reduce-friction-by-extension="1.25"
        speed-planing="15"
        spring-factor-not-planing="0.7">
  </gear>

  <!-- Flotteur droite -->
  <gear x="0.410" y="-5.338" z="-1.144"
