  <cockpit x="3.387" y="0.000" z="-0.049"/>

  <fuselage ax="6.683" ay="0" az="-0.571" bx="-5.997" by="0" bz="0.130" width="2" taper="0.5" midpoint="0.25"/>

  <wing x="1.308" y="0" z="0.424"
